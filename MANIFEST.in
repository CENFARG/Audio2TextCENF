# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include SECURITY.md

# Include requirements
include requirements.txt

# Include configuration files
include pyproject.toml
include setup.py

# Include assets
recursive-include assets *.ico *.png
recursive-include templates *.html
recursive-include lang *.json
recursive-include config *.txt *.json

# Include documentation
recursive-include docs *.md *.nsi

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.log
global-exclude *.spec

# Exclude build directories
prune _build_artifacts
prune _old_versions_archive
prune build
prune dist
prune .venv
prune .git
prune tests
